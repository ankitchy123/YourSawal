	<script>
		const logOut = async () => {
			const response = await fetch('http://localhost:3000/api/auth/logout', {
				method: 'GET',
				headers: {
					'Content-Type': 'application/json'
				},
			});
			const json = await response.json();
			if (json.success) {
				window.location.replace("http://localhost:3000/");
			}
		}

		const fetchdetails = async () => {
			const response = await fetch('http://localhost:3000/api/auth/getuser', {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json'
				},
			});
			const json = await response.json();

			let name = document.getElementById('name')
			name.innerHTML = json.firstname + ' ' + json.lastname

			let firstname = document.getElementById('firstname')
			firstname.innerHTML = json.firstname

			document.title = "Your Sawaal :: " + json.firstname + " " + json.lastname;
			let mail = document.getElementById('email')
			mail.innerHTML = json.email
			let gender = document.getElementById('gender')
			gender.innerHTML = json.gender
			let occupation = document.getElementById('occupation')
			occupation.innerHTML = json.occupation
			let interests = document.getElementById('interests')
			interests.innerHTML = json.interests
			let education = document.getElementById('education')
			education.innerHTML = json.education
			let workExperience = document.getElementById('workExperience')
			workExperience.innerHTML = json.workExperience
			let location = document.getElementById('location')
			location.innerHTML = json.location
			let about = document.getElementById('about')
			about.innerHTML = json.about

			let hobbies = document.getElementById('hobbies')
			hobbies.innerHTML = json.hobbies

			let dob = document.getElementById('dob')
			const dobDate = new Date(json.dob);
			dob.innerHTML = dobDate.toLocaleString('default', { month: 'short' }) + ", " + dobDate.getDate() + " " + dobDate.getFullYear()

			let joined = document.getElementById('joined')
			const date = new Date(json.joined);
			joined.innerHTML = date.toDateString()

			let followers = document.getElementById('followers')
			followers.innerHTML = json.followers.length

			let following = document.getElementById('following')
			following.innerHTML = json.following.length

			let socialmedia = document.getElementById('socialmedia')

			let html = ''
			html += `<li><a class="facebook" href="${json.socialNetworks.facebook}" target="_blank"><i class="fa fa-facebook"></i></a></li>`
			html += `<li><a class="instagram" href="${json.socialNetworks.instagram}" target="_blank"><i class="fa fa-instagram"></i></a></li>`
			html += `<li><a class="linkedin" href="${json.socialNetworks.linkedin}" target="_blank"><i class="fa fa-linkedin"></i></a></li>`
			html += `<li><a class="youtube" href="${json.socialNetworks.youtube}" target="_blank"><i class="fa fa-youtube"></i></a></li> `

			socialmedia.innerHTML = html
		}
		fetchdetails()

		const handleSearch = async (e) => {
			e.preventDefault()
			const searchinput = document.getElementById('searchinput').value
			console.log(searchinput);
			let url = 'http://localhost:3000/api/auth/getuser/name/' + searchinput
			const user = await fetch(url, {
				method: 'GET'
			})
			const users = await user.json()
			if (users) {
				localStorage.setItem('searchResuls', JSON.stringify(users))
				console.log(users);
				window.location.replace("http://localhost:3000/users");
			}
		}
