	<script>
		const fetchdetails = async () => {
			const response = await fetch('http://localhost:3000/api/auth/getuser', {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json'
				},
			});
			const json = await response.json();

			let name = document.getElementById('name')
			name.innerHTML = json.firstname + ' ' + json.lastname

			let firstname = document.getElementById('firstname')
			firstname.innerHTML = json.firstname

			let location = document.getElementById('location')
			location.innerHTML = json.location

			let followers = document.getElementById('followers')
			followers.innerHTML = json.followers.length
			let following = document.getElementById('following')
			following.innerHTML = json.following.length

			let userfollowers = document.getElementById('userfollowers')
			userfollowers.innerHTML = json.following.length

			let followersId = json.followers

			let html = ''
			followersId.forEach(async (id) => {
				const res = await fetch('http://localhost:3000/api/auth/getuser/' + id, {
					method: 'GET',
					headers: {
						'Content-Type': 'application/json'
					},
				});
				const Data = await res.json();
				html += `<div class="col-lg-3 col-md-6 col-sm-6">
					<div class="friend-box">
								<figure>
									<img src="images/resources/frnd-cover5.jpg" alt="">
									<span>Followers: ${Data.followers.length}</span>
									</figure>
									<div class="frnd-meta">
										<img src="images/resources/classic-new2.jpg" alt="">
										<div class="frnd-name">
											<a href="#" title="">${Data.firstname} ${Data.lastname}</a>
											<span>${Data.location}</span>
											</div>
											</div>
											</div>
											</div>`

				localStorage.setItem('followersData', html)
			})
			let followersdata = localStorage.getItem('followersData')
			let followerDiv = document.getElementById('followerDiv')
			followerDiv.innerHTML = followersdata
		}
		fetchdetails()
